<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiAppCinemafilmes.MainPage">

    <ContentPage.Background>
        <LinearGradientBrush StartPoint="0,1" EndPoint="1,0">
            <GradientStop Color="Black" Offset="0.3"/>
            <GradientStop Color="Black" Offset="1.1"/>
        </LinearGradientBrush>
    </ContentPage.Background>
    <ContentPage.Resources>
        <Style TargetType="Button">
            <Setter Property="BackgroundColor" Value="Pink"/>
            <Setter Property="TextColor" Value="White"/>
            <Setter Property="FontSize" Value="20"/>
        </Style>
    </ContentPage.Resources>
    <ScrollView>
        <Grid RowDefinitions="*,*,*,*,*,*" ColumnDefinitions="*,*"
              VerticalOptions="FillAndExpand" Padding="5">
            <Button x:Name="btn00" Grid.Row="0" Grid.Column="0" Text="Comedia" Clicked="btn00_Clicked" />
            <Button x:Name="btn10" Grid.Row="1" Grid.Column="0" Text="Terror" Clicked="btn10_Clicked"/>
            <Button x:Name="btn20" Grid.Row="2" Grid.Column="0" Text="Ficção Científica" Clicked="btn20_Clicked"/>
            <Button x:Name="btn30" Grid.Row="3" Grid.Column="0" Text="Infatil" Clicked="btn30_Clicked"/>
            <Button x:Name="btn40" Grid.Row="4" Grid.Column="0" Text="Guerra" Clicked="btn40_Clicked"/>
            <Button x:Name="btn50" Grid.Row="5" Grid.Column="0" Text="Nacional" Clicked="btn50_Clicked"/>

            <Button x:Name="btn01" Grid.Row="0" Grid.Column="1" Text="Aventura" Clicked="btn01_Clicked"/>
            <Button x:Name="btn11" Grid.Row="1" Grid.Column="1" Text="Drama" Clicked="btn11_Clicked"/>
            <Button x:Name="btn21" Grid.Row="2" Grid.Column="1" Text="Suspense" Clicked="btn21_Clicked"/>
            <Button x:Name="btn31" Grid.Row="3" Grid.Column="1" Text="Animação" Clicked="btn31_Clicked"/>
            <Button x:Name="btn41" Grid.Row="4" Grid.Column="1" Text="Documentário" Clicked="btn41_Clicked"/>
            <Button x:Name="btn51" Grid.Row="5" Grid.Column="1" Text="Romance" Clicked="btn51_Clicked"/>

        </Grid>
    </ScrollView>

</ContentPage>
