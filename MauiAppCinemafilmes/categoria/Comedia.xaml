<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiAppCinemafilmes.categoria.Comedia"
             Title="Comedia">
    <VerticalStackLayout>
        <ScrollView>
            <Grid RowDefinitions="300, 300, 300"
          ColumnDefinitions="*,*"
          Padding="5">

                <ImageButton Aspect="AspectFill" Grid.Column="0" Grid.Row="0"
                     Source="comedia1.jpg" x:Name="btncomed1"
                     Clicked="btncomed1_Clicked"/>
                <ImageButton Aspect="AspectFill" Grid.Column="1" Grid.Row="0"
                     Source="comedia2.jpg" x:Name="btncomed2"
                     Clicked="btncomed2_Clicked"/>
                <ImageButton Aspect="AspectFill" Grid.Column="0" Grid.Row="1"
                     Source="comedia3.jpg" x:Name="btncomed3"
                     Clicked="btncomed3_Clicked"/>
                <ImageButton Aspect="AspectFill" Grid.Column="1" Grid.Row="1"
                     Source="comedia4.jpg" x:Name="btncomed4"
                     Clicked="btncomed4_Clicked"/>
            </Grid>
        </ScrollView>
    </VerticalStackLayout>
</ContentPage>