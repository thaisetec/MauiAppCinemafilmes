<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiAppCinemafilmes.categoria.Documentario"
             Title="Documentario">
    <VerticalStackLayout>
        <ScrollView>
            <Grid RowDefinitions="300, 300, 300"
          ColumnDefinitions="*,*"
          Padding="5">

                <ImageButton Aspect="AspectFill" Grid.Column="0" Grid.Row="0"
                     Source="doc1.jpg" x:Name="btndoc1"
                     Clicked="btndoc1_Clicked"/>
                <ImageButton Aspect="AspectFill" Grid.Column="1" Grid.Row="0"
                     Source="doc2.jpg" x:Name="btndoc2"
                     Clicked="btndoc2_Clicked"/>
                <ImageButton Aspect="AspectFill" Grid.Column="0" Grid.Row="1"
                     Source="doc3.jpg" x:Name="btndoc3"
                     Clicked="btndoc3_Clicked"/>
                <ImageButton Aspect="AspectFill" Grid.Column="1" Grid.Row="1"
                     Source="doc4.jpg" x:Name="btndoc4"
                     Clicked="btndoc4_Clicked"/>
            </Grid>
        </ScrollView>
    </VerticalStackLayout>
</ContentPage>