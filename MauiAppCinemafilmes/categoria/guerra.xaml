<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiAppCinemafilmes.categoria.Guerra"
             Title="Guerra">
    <VerticalStackLayout>
        <ScrollView>
            <Grid RowDefinitions="300, 300, 300"
   ColumnDefinitions="*,*"
   Padding="5">

                <ImageButton Aspect="AspectFill" Grid.Column="0" Grid.Row="0"
              Source="guerra1.jpg" x:Name="btnguerra1" Clicked="btnguerra1_Clicked"/>

                <ImageButton Aspect="AspectFill" Grid.Column="1" Grid.Row="0"
              Source="guerra2.jpg" x:Name="btnguerra2"
             Clicked="btnguerra2_Clicked"/>
                <ImageButton Aspect="AspectFill" Grid.Column="0" Grid.Row="1"
              Source="guerra3.jpg" x:Name="btnguerra3"
              Clicked="btnguerra3_Clicked"/>
                <ImageButton Aspect="AspectFill" Grid.Column="1" Grid.Row="1"
              Source="guerra4.jpg" x:Name="btnguerra4"
             Clicked="btnguerra4_Clicked"/>
            </Grid>
        </ScrollView>
    </VerticalStackLayout>
</ContentPage>