<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiAppCinemafilmes.categoria.Infantil"
             Title="Infantil">
    <VerticalStackLayout>
        <ScrollView>
            <Grid RowDefinitions="300, 300, 300"
   ColumnDefinitions="*,*"
   Padding="5">

                <ImageButton Aspect="AspectFill" Grid.Column="0" Grid.Row="0"
              Source="infantil1.jpg" x:Name="btninf1" Clicked="btninf1_Clicked"/>

                <ImageButton Aspect="AspectFill" Grid.Column="1" Grid.Row="0"
              Source="infantil2.jpg" x:Name="btninf2"
            Clicked="btninf2_Clicked"/>
                <ImageButton Aspect="AspectFill" Grid.Column="0" Grid.Row="1"
              Source="infantil3.jpg" x:Name="btninf3"
              Clicked="btninf3_Clicked"/>
                <ImageButton Aspect="AspectFill" Grid.Column="1" Grid.Row="1"
              Source="infantil4.jpg" x:Name="btninf4"
             Clicked="btninf4_Clicked"/>
            </Grid>
        </ScrollView>
    </VerticalStackLayout>
</ContentPage>