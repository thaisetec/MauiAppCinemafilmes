<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiAppCinemafilmes.categoria.Drama"
             Title="Drama">
    <VerticalStackLayout>
        <ScrollView>
            <Grid RowDefinitions="300, 300, 300"
          ColumnDefinitions="*,*"
          Padding="5">

                <ImageButton Aspect="AspectFill" Grid.Column="0" Grid.Row="0"
                     Source="drama1.jpg" x:Name="btndrama1"
                    Clicked="btndrama1_Clicked"/>
                <ImageButton Aspect="AspectFill" Grid.Column="1" Grid.Row="0"
                     Source="drama2.jpg" x:Name="btndrama2"
                  Clicked="btndrama2_Clicked"/>
                <ImageButton Aspect="AspectFill" Grid.Column="0" Grid.Row="1"
                     Source="drama3.jpg" x:Name="btndrama3"
                     Clicked="btndrama3_Clicked"/>
                <ImageButton Aspect="AspectFill" Grid.Column="1" Grid.Row="1"
                     Source="drama4.jpg" x:Name="btndrama4"
                     Clicked="btndrama4_Clicked"/>
            </Grid>
        </ScrollView>
    </VerticalStackLayout>
</ContentPage>