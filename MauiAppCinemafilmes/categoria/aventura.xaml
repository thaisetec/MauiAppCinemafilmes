<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiAppCinemafilmes.categoria.Aventura"
             Title="Aventura">
    <VerticalStackLayout>
        <ScrollView>
            <Grid RowDefinitions="300, 300, 300"
           ColumnDefinitions="*,*"
           Padding="5">

                <ImageButton Aspect="AspectFill" Grid.Column="0" Grid.Row="0"
                      Source="aventura1.jpg" x:Name="btnavent1"
                      Clicked="btnavent1_Clicked"/>
                <ImageButton Aspect="AspectFill" Grid.Column="1" Grid.Row="0"
                      Source="aventura2.jpg" x:Name="btnavent2"
                      Clicked="btnavent2_Clicked"/>
                <ImageButton Aspect="AspectFill" Grid.Column="0" Grid.Row="1"
                      Source="aventura3.jpg" x:Name="btnavent3"
                      Clicked="btnavent3_Clicked"/>
                <ImageButton Aspect="AspectFill" Grid.Column="1" Grid.Row="1"
                      Source="aventura4.jpg" x:Name="btnavent4"
                      Clicked="btnavent4_Clicked"/>
            </Grid>
        </ScrollView>
    </VerticalStackLayout>
</ContentPage>