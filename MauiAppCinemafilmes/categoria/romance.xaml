<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiAppCinemafilmes.categoria.Romance"
             Title="Romance">
    <VerticalStackLayout>
        <ScrollView>
            <Grid RowDefinitions="300, 300, 300"
   ColumnDefinitions="*,*"
   Padding="5">

                <ImageButton Aspect="AspectFill" Grid.Column="0" Grid.Row="0"
              Source="rom1.jpg" x:Name="btnromance1" Clicked="btnromance1_Clicked"/>

                <ImageButton Aspect="AspectFill" Grid.Column="1" Grid.Row="0"
              Source="rom2.jpg" x:Name="btnromance2"
             Clicked="btnromance2_Clicked"/>
                <ImageButton Aspect="AspectFill" Grid.Column="0" Grid.Row="1"
              Source="rom3.jpg" x:Name="btnromance3"
             Clicked="btnromance3_Clicked"/>
                <ImageButton Aspect="AspectFill" Grid.Column="1" Grid.Row="1"
              Source="rom4.jpg" x:Name="btnromance4"
             Clicked="btnromance4_Clicked"/>
            </Grid>
        </ScrollView>
    </VerticalStackLayout>
</ContentPage>